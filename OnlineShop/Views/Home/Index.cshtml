        <div class="clear"></div>
    </div>
    <div class="section group">
        @{ Html.RenderAction("NewProduct", "Home"); }
    </div>
    <div class="content_bottom">
        <div class="heading">
            <h3>Sản phẩm hot</h3>
        </div>
        <div class="see">
            <p><a href="/san-pham">Xem tất cả sản phẩm</a></p>
